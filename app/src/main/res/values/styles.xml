<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. --><style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- For Android sdk versions 26+. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/opensans_font</item>
        <!-- Target Android sdk versions < 26 and > 14. -->
        <item name="fontFamily">@font/opensans_font</item>
        <!-- sets the style for the overflow button -->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <!-- This style defines the tint color of the overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorGrey</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VideoItemNameFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/video_item_name_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="VideoItemContentFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/video_item_content_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CommentItemWriterFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="CommentItemContentFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="CommentItemLikeCountFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="CommentItemCreatedDateFont">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="ProductDetailNameFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductDetailTitleFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="ProductDetailContentFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="ProductDetailMemoFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:text" tools:text="memo"/>
    </style>

    <style name="AboutContentFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="AboutTitleFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
